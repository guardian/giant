<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}logs/frontend.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${LOGS_DIR}logs/frontend-log-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- number of days -->
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] %date{yyyy-MM-dd HH:mm:ss ZZZZ} - %logger - %thread - %message%n%xException</pattern>
        </encoder>
    </appender>

    <appender name="JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}logs/frontend.log.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${LOGS_DIR}logs/frontend-log-json-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- number of days -->
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}logs/frontend-access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover with compression -->
            <fileNamePattern>${LOGS_DIR}logs/frontend-access-log-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 1 day of history -->
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
        </encoder>
    </appender>


    <appender name="ACCESS_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}logs/frontend-access.log.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${LOGS_DIR}logs/frontend-access-json-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- number of days -->
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="SLOW_QUERY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}logs/frontend-slow_queries.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${LOGS_DIR}logs/frontend-slow_queries-log-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 30 days worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} - %message%n%xException</pattern>
        </encoder>
    </appender>

    <!-- additivity=false ensures access log data only goes to the access log -->
    <logger name="access" level="INFO" additivity="false">
        <appender-ref ref="ACCESS_FILE" />
        <appender-ref ref="ACCESS_JSON" />
    </logger>

    <logger name="slowqueries" level="INFO" additivity="false">
        <appender-ref ref="SLOW_QUERY_FILE" />
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="JSON"/>
    </root>

</configuration>
